<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mylayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".screens.activities.ActivityImageCropNew" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.50"
        android:gravity="center"
        android:weightSum="2" >

        <com.olav.logolicious.cropper.CropImageView
            android:id="@+id/CropImageView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true">
        </com.olav.logolicious.cropper.CropImageView>

        <Button
            android:id="@+id/aspectRatio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_white_edge"
            android:padding="10dp"
            android:text="16:9"
            android:textColor="@color/White"
            android:textSize="@dimen/aspectRatio_TextSize"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/LinearLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4" >

        <ImageView
            android:id="@+id/aspectRatio11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@color/Transparent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ratio1_1"
            android:textSize="@dimen/aspectRatio_TextSize" />

        <ImageView
            android:id="@+id/aspectRatio23"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@color/Transparent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/rotate_ratio3_2"
            android:textSize="@dimen/aspectRatio_TextSize" />

        <ImageView
            android:id="@+id/aspectRatio43"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@color/Transparent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/rotate_ratio4_3"
            android:textSize="@dimen/aspectRatio_TextSize" />

        <ImageView
            android:id="@+id/aspectRatio169"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@color/Transparent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/rotate_ratio16_9"
            android:textSize="@dimen/aspectRatio_TextSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_weight=".25"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3" >

        <ImageButton
            android:id="@+id/Button_rotate"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ninety_degrees_for_cropping"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/Button_crop"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ok_button"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/Button_nocrop"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/no_crop"
            android:textSize="12sp"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>