<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Semi_Trans80"
    android:orientation="vertical"
    android:padding="7dp">

    <Button
        android:id="@+id/buttonLockOrUnlock"
        android:layout_width="match_parent"
        android:layout_height="@dimen/LongPressOptionHeight"
        android:background="@drawable/button_white_edge"
        android:padding="3dp"
        android:text="Lock/Unlock"
        android:visibility="gone"/>

    <Button
        android:id="@+id/buttonEditText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/LongPressOptionHeight"
        android:background="@drawable/button_white_edge"
        android:padding="3dp"
        android:text="Edit Text" />
</LinearLayout>